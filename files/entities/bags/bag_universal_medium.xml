<Entity name="bag_universal_medium" tags="hittable,teleportable_NOT,item_physics,item_pickup" >
	<Base file="data/entities/base_item_projectile.xml" />

	<!-- physical presence -->
	
	<PhysicsBodyComponent 
		_tags="enabled_in_world"
		uid="1" 
		allow_sleep="1" 
		angular_damping="0.6" 
		linear_damping="0"
		fixed_rotation="0" 
		is_bullet="1" 
		auto_clean="0"
		on_death_leave_physics_body="1"
		hax_fix_going_through_ground="1"
		>
	</PhysicsBodyComponent>
	
	<PhysicsImageShapeComponent 
		body_id="1"
		centered="1"
		image_file="mods/bags_of_many/files/ui_gfx/bag_universal_medium.png"
		material="item_box2d"
		>
	</PhysicsImageShapeComponent>
	
	<PhysicsThrowableComponent
		max_throw_speed="70"
		throw_force_coeff="1.25"
		min_torque="4"
		max_torque="10"
		>
	</PhysicsThrowableComponent>

	<VelocityComponent
		_tags="enabled_in_world"
		>
	</VelocityComponent>

	<!-- storage functionnalities -->

    <Inventory2Component 
        quick_inventory_slots="0"
        full_inventory_slots_x="5"
        full_inventory_slots_y="1"
    />

    <Entity name="inventory_quick">
    </Entity>
    <Entity name="inventory_full"/>

    <!-- Grab things -->
	<LuaComponent
		script_kick="mods/bags_of_many/files/scripts/bags/bags_universal_script.lua"
        execute_every_n_frame="-1" >
	</LuaComponent>
	
    <!-- Throw out things -->
    <!-- <LuaComponent
		script_throw_item="mods/bags_of_many/files/scripts/bags/bags_universal_script.lua"
        execute_every_n_frame="-1" >
	</LuaComponent> -->
	
    <!-- Init bag container storage -->

	<!-- <LuaComponent
		script_item_picked_up="mods/bags_of_many/files/scripts/bags/bags_script.lua"
        execute_every_n_frame="-1" >
	</LuaComponent> -->
	
	<!-- item -->

	<SpriteComponent
		_tags="enabled_in_hand"
		_enabled="0"
		offset_x="4"
		offset_y="6"
		image_file="mods/bags_of_many/files/ui_gfx/bag_universal_medium.png"
		>
	</SpriteComponent>

	<ItemComponent
		_tags="enabled_in_world"
		item_name="$bag_universal_medium"
		is_pickable="1"
		is_equipable_forced="1"
		ui_sprite="mods/bags_of_many/files/ui_gfx/bag_universal_medium.png"
		ui_description="$item_description_bag_universal_medium"
		preferred_inventory="QUICK"
		>
	</ItemComponent>

	<UIInfoComponent
		_tags="enabled_in_world"
		name="$bag_universal_medium">
	</UIInfoComponent>
	
	<AbilityComponent
        throw_as_item="1"
		ui_name="$bag_universal_medium"
		>
        <gun_config
            deck_capacity="0"
        >
        </gun_config>
	</AbilityComponent>

</Entity>
